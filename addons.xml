<addon id="plugin.program.piratebay"
       name="The Pirate Bay"
       version="0.0.0"
       provider-name="divingmule">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary></summary>
    <description>Browse and download .torrent files</description>
    <platform>all</platform>
  </extension>
</addon>

